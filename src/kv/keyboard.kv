<KeyboardLayout>:
    padding: 5, 10
    spacing: 5
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Line:
            points: (self.x, self.y+self.height, self.x+self.width, self.y+self.height)

<KeyboardButton>:
    background_normal: ''
    background_color: (37/255., 35/255., 54/255., 1)
    color: (1, 1, 1, 1)
    markup: True

<KeyboardToggleButton>:
    background_normal: ''
    background_color: (56/255., 72/255., 84/255., 1)
    color: (1, 1, 1, 1)
    markup: True

<NumericKeyboard>:
    padding: 5, 10
    spacing: 5
    canvas:
        Color:
            rgba: (1, 1, 1, 1)
        Line:
            points: (self.x, self.y+self.height, self.x+self.width, self.y+self.height)
